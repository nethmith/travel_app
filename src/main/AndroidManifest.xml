<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_interface_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_interface_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelApp"
        tools:targetApi="31">

        <!-- Splash Screen Activity (Set as Launcher) -->
        <activity android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding Activity 01 -->
        <activity
            android:name=".OnboardingActivity01"
            android:exported="true" />

        <!-- Onboarding Activity 02 -->
        <activity
            android:name=".OnboardingActivity02"
            android:exported="true" />

        <!-- Onboarding Activity 03 -->
        <activity
            android:name=".OnboardingActivity03"
            android:exported="true" />

        <!-- Home Page -->
        <activity
            android:name=".HomePage"
            android:exported="true" />

        <!-- Favorites Activity -->
        <activity
            android:name=".FavoritesActivity"
            android:exported="true" />

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- Tour Details Activity -->
        <activity
            android:name=".TourDetailsActivity"
            android:exported="true" />

        <!-- Booking Details Activity -->
        <activity
            android:name=".BookingDetailsActivity"
            android:exported="true" />

        <!-- Payment Method Activity -->
        <activity
            android:name=".PaymentMethodActivity"
            android:exported="true" />

        <!-- Details Confirm Activity -->
        <activity
            android:name=".BookingDetailsConfirm"
            android:exported="true" />

        <!-- Main Activity (Opens after Onboarding) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>

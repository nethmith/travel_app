<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tourImage"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="428dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/descriptionImg01"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image5" />

                <ImageView
                    android:id="@+id/descriptionImg02"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image1" />

                <ImageView
                    android:id="@+id/descriptionImg03"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image3" />

                <ImageView
                    android:id="@+id/descriptionImg04"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />

            </LinearLayout>

            <TextView
                android:id="@+id/tourTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Bali"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tourLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Indonesia"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tourPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="$120.50/person"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tourRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="4.7 â˜…"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tourDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bali is often called the Island of the Gods due to its deep-rooted Hindu traditions, despite Indonesia being a predominantly Muslim country. The island is home to numerous ancient temples such as Tanah Lot, Uluwatu, and Besakih, where daily rituals and religious ceremonies are a vital part of life."
                android:textSize="14sp" />

            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="Book Now!"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>